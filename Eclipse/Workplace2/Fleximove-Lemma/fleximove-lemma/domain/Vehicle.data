Context vehicle {


//Entity 
//Table(name = „Vehicle“) 
    Entity Vehicle {
    
// GeneratedValue 
// Id 
        id : String
        identificationNumber : IdentificationNumber
        providerId : String
        vehicleModel : String
        vehicleType : VehicleType
        status : VehicleStatus
        restrictions : VehicleRestrictions
        vehiclePrice : Price
        currentLocation : Location
    }

    Enumeration BillingModel {
        PER_HOUR,
        PER_KILOMETER
    }

    Enumeration DriverLicenseType {
        MOTORCYCLE,
        CAR,
        TRUCK,
        BUS,
        NONE
    }

    Enumeration VehicleStatus {
        AVAILABLE,
        BOOKED,
        IN_USE,
        MAINTENANCE,
        RETIRED
    }

    Enumeration VehicleType {
        BICYCLE,
        E_BIKE,
        E_SCOOTER,
        SCOOTER,
        MOTORCYCLE,
        CAR,
        TRUCK
    }


    ValueObject IdentificationNumber {
        identNumber : String
    }

    ValueObject Location {
        latitude : Decimal
        longitude : Decimal
    }

    ValueObject Price {
        amount : Decimal
        billingModel : BillingModel
    }

    ValueObject VehicleRestrictions {
        minAge : Integer
        maxBookingTimeMinutes : Integer
        maxDistanceKm : Decimal
        maxPassengers : Integer
        requiredLicense : DriverLicenseType
    }

}
