context Vehicle {

    enum BillingModel {
        PER_HOUR,
        PER_KILOMETER
    }

    enum DriverLicenseType {
        MOTORCYCLE,
        CAR,
        TRUCK,
        BUS,
        NONE
    }

    enum VehicleStatus {
        AVAILABLE,
        BOOKED,
        IN_USE,
        MAINTENANCE,
        RETIRED
    }

    enum VehicleType {
        BICYCLE,
        E_BIKE,
        E_SCOOTER,
        SCOOTER,
        MOTORCYCLE,
        CAR,
        TRUCK
    }

    structure Vehicle <entity> {
        string id,
        IdentificationNumber identificationNumber,
        string providerId,
        string vehicleModel,
        VehicleType vehicleType,
        VehicleStatus status,
        VehicleRestrictions restrictions,
        Price vehiclePrice,
        Location currentLocation
    }

    structure IdentificationNumber <valueObject> {
        string identNumber
    }

    structure Location <valueObject> {
        double latitude,
        double longitude
    }

    structure Price <valueObject> {
        double amount,
        BillingModel billingModel
    }

    structure VehicleRestrictions <valueObject> {
        int minAge,
        int maxBookingTimeMinutes,
        double maxDistanceKm,
        int maxPassengers,
        DriverLicenseType requiredLicense
    }
}
