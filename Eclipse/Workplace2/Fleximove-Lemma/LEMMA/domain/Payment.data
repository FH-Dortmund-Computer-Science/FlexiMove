context Payment {
// Entity
// Table(name = "payment")

    structure Payment <entity> {
// GeneratedValue 
// Id 
        PaymentId paymentId <identifier>,
        string bookingId, 
        string userId,
        Amount amount,
        string currency,
        string description,
        PaymentStatus paymentStatus,
        BillingModel billingModel,
        string timestamp 
    }


    structure PaymentId <valueObject> {
        string value
    }

    structure Amount <valueObject> {
        double value
    }


    enum PaymentStatus {
        PENDING,
        COMPLETED,
        FAILED
    }

    enum BillingModel {
        PER_BOOKING,
        PER_KM,
        SUBSCRIPTION
    }
}
