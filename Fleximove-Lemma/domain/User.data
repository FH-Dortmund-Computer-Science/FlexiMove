context User {

// Entity 
// Table(name = simpleUser) 

    structure User <entity> {
    
 // GeneratedValue 
// Id 
        string id <identifier>,
        Email email,
        Password passwort, 
        Address address,
        string  phoneNumber, 
        PaymentInfo paymentInfo
    }

    // Value Objects
    structure Email <valueObject> {
       string value 
    }

    structure Password <valueObject> {
        string value
    }

    structure Address <valueObject> {
        string street, 
        string city,
        string zipCode,
        string country
    }

    structure PaymentInfo <valueObject> {
       string iban,
       string cardNumber
    }


    enum DriverLicenseType {
        A, B, C, D, E
    }



 structure Customer extends User {
        string firstName,
        string lastName,
        string dateOfBirth,
        DriverLicenseType driverLicenseType
    }

 structure Provider extends User {
        string companyName
    }
}
